{
  "manifest_version": 2,
  "name": "DarkDetect",
  "version": "1.0",
  "description": "Detect dark patterns on websites",
  "permissions": ["activeTab"],
  "browser_action": {
    "19": "icon_19x19.png",
    "128":"icon_128x128.png"
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
